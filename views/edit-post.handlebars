<article>
    <a href="/dashboard"> &larr; Back to Dashboard</a>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <label for="post-title">Subject</label>
        <div>
            <input name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div>
            <label for="post-body">Body</label>
            <div>
                <textarea name="post-body" type="text" value="{{post.body}}">{{post.body}}</textarea>
            </div>
        </div>
        <div>
            You posted this on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <button type="submit">Save</button>
                <button type="button">Delete</button>
            </div>
        </div>
    </form>
    <form>
        <h2>New Comment</h2>
        <div>
            <label for="comment-body">Comment</label>
            <div>
                <textarea name="comment-body"></textarea>
            </div>
        </div>
        <div>
            <button type="submit">Save</button>
        </div>
    </form>
    </section>
    {{> comments post.comments }}
    <script src="/javascript/edit-post.js"></script>
    <script src="/javascript/delete-post.js"></script>
    <script src="/javascript/comment.js"></script>