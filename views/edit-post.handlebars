<article>
    <a href="/dashboard"> &larr; Back to Dashboard</a>
    </br>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div class="form-row">
            <div class="form-group col-sm-12">
                <label for="post-title">Subject</label>
                <input name="post-title" type="text" class="form-control" value="{{post.title}}" />
            </div>
        <div>
        <div class="form-row">
            <div class="form-group col-sm-12">
                <label for="post-body">Body</label>
                <textarea name="post-body" type="text" class="form-control" rows="3" cols="135" value="{{post.body}}">{{post.body}}</textarea>
            </div>
        </div>
        <div>
            Posted on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit" class="btn-success btn btn-info">Save</button>
        <button type="button" class="delete-post-btn btn btn-danger">Delete</button>
    </form>
    <hr color="#17a2b8">
    <h2>New Comment</h2>
    <form class="comment-form">
        <div class="form-row">
            <div class="form-group col-sm-12">
                <label for="comment-body">Comment</label>
                <textarea name="comment-body" class="form-control" rows="3" cols="135" placeholder="Enter Your Comment"></textarea>
            </div>
        </div>
        <button type="submit" class="btn-success btn btn-info">Save</button>
    </form>
    </section>
    <hr color="#17a2b8">
    <section>
        <h2>Comments</h2>
        {{> comments post.comments }}
    </section>
    <script src="/javascript/edit-post.js"></script>
    <script src="/javascript/delete-post.js"></script>
    <script src="/javascript/comment.js"></script>