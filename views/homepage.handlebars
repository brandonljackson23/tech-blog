<section>
    <h2>Recent Posts</h2>
    <div id="homepage">
        <ul class="list-group">
            {{#each posts as |post|}}
            <li class="list-group-item list-group-item-info">
                {{> post-info post }}
            </li>
            {{/each}}
        </ul>
    </div>
</section>

{{#if loggedIn}}
<h3><a href="/dashboard"> Create a Post</a></h3>
{{/if}}